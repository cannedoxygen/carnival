# Simpsons Carnival Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration (Redis for Analytics)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain Configuration
RPC_URL=https://ethereum-rpc-url.com
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
NETWORK_ID=1

# Chainlink VRF Configuration
VRF_COORDINATOR_ADDRESS=0xABCDEF1234567890ABCDEF1234567890ABCDEF12
VRF_SUBSCRIPTION_ID=123
VRF_KEY_HASH=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef12
VRF_CALLBACK_GAS_LIMIT=200000

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_ADDRESSES=0x1234567890123456789012345678901234567890,0xabcdefabcdefabcdefabcdefabcdefabcdefabcd

# Admin Operations (for jackpot trigger updates, etc.)
ADMIN_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_BATCH_SIZE=100

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
BLOCKCHAIN_SYNC_INTERVAL=10000

# Security Configuration
HELMET_CSP_ENABLED=true
REQUEST_SIZE_LIMIT=10mb

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_ITEMS=1000

# Notification Configuration (Optional)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_ENABLED=false

# Performance Configuration
MAX_CONCURRENT_REQUESTS=50
KEEPALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Development Configuration (set to false in production)
ENABLE_DEBUG_ROUTES=true
ENABLE_CORS_ALL_ORIGINS=false
VERBOSE_LOGGING=true